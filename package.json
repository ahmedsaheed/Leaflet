{
  "build": {
    "appId": "com.leaflet",
    "productName": "Leaflet",
    "copyright": "Copyright © 2022 Ahmed Saheed",
    "mac": {
      "icon": "./resources/app.icns",
      "publish": "github"
    },
    "win": {
      "icon": "./resources/app.ico",
      "publish": "github"
    },
    "linux": {
      "icon": "./resources/icon.png",
      "publish": "github"
    },
    "directories": {
      "buildResources": "resources"
    }
  },
  "name": "leaflet",
  "productName": "Leaflet",
  "description": "Leaflet is a student first minimal markdown editor",
  "version": "1.0.0",
  "author": "Ahmed Saheed <ahmedsaheed2@outlook.com>",
  "copyright": "Copyright © 2012 Ahmed Saheed",
  "main": "app/background.js",
  "license": "CC-BY-NC-SA-4.0",
  "scripts": {
    "dev": "nextron",
    "build": "nextron build",
    "build:all": "nextron build --all",
    "build:win32": "nextron build --win --ia32",
    "build:win64": "nextron build --win --x64",
    "build:mac": "nextron build --mac --x64",
    "build:linux": "nextron build --linux",
    "postinstall": "electron-builder install-app-deps",
    "release": "electron-builder --publish always",
    "release:win32": "electron-builder --publish always --win --ia32",
    "release:win64": "electron-builder --publish always --win --x64",
    "release:mac": "electron-builder --publish always --mac --x64",
    "release:linux": "electron-builder --publish always --linux"
    },
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmedsaheed/Leaflet.git"
  },
  "dependencies": {
    "@fontsource/ia-writer-duospace": "^4.5.3",
    "chokidar": "^3.5.3",
    "drag-drop": "^7.2.0",
    "electron-serve": "^1.1.0",
    "electron-store": "^8.0.1",
    "fs-extra": "^10.1.0",
    "highlight.js": "^11.6.0",
    "katex": "^0.16.0",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.4",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-table-of-contents": "^0.6.0",
    "markdown-it-task-lists": "^2.1.1",
    "markdown-it-texmath": "^1.0.0",
    "open": "^8.4.0",
    "react-autocomplete-hint": "^2.0.0",
    "wordcount": "^1.1.1"
  },
  "devDependencies": {
    "@types/react": "^18.0.17",
    "autoprefixer": "^10.4.7",
    "electron": "^18.2.0",
    "electron-builder": "^23.3.3",
    "next": "^12.1.6",
    "nextron": "^8.1.0",
    "postcss": "^8.4.13",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "tailwindcss": "^3.0.24"
  },
  "bundleDependencies": [
    "markdown-it-footnote"
  ]
}
